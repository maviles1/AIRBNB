<div class="container">
    <% @offers.each do |offer| %>
      <% if offer.status.nil?%>
      <h1><%= offer.user.username %> </h1>
      <p><%= offer.description %> </p>
      <%= link_to "user", profile_path(offer.user)%>
      <%= link_to "accept", offer_accept_path(offer.listing, offer.id), method: :patch%>
      <%= link_to "reject", offer_decline_path(offer.listing, offer.id, method: :patch)%>
      <% end %>
  <% end %>
</div>
