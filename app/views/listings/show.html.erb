<div class="container">
    <!-- breathe -->
    <!-- breathe -->
    <div class="offer">
        <h1 class="title">
            <%= @listing.title %>, <em>Located in St. Tropez</em>
        </h1>
        <div class="show-flex-container">
            <!-- breathe -->
            <div class="show-image-container">
                <div id="carousel1" class="card-trip carousel slide" data-interval="false">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="https://eskipaper.com/images/yacht-2.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="https://blogs.forbes.com/billspringer/files/2019/03/00000510_2-1.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="https://www.heesenyachts.com/wp-content/uploads/2019/09/19255-Pollux-ext-1.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carousel1" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel1" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="show-info-container">
                <div class="show-info-title">
                    <h6 class="show-info-owner">Owner name:</h6>
                    <h5 class="show-info-owner">
                        <%= @listing  .user.first_name %>
                        <%= @listing  .user.last_name %>
                    </h5>
                </div>
                <div class="show-info-title">
                    <h6 class="show-info-owner">Price per day:</h6>
                    <h5 class="show-info-owner">$99</h5>
                </div>
                <div class="show-info-title">
                    <h6 class="show-info-owner">Cleaning Fees:</h6>
                    <h5 class="show-info-owner">$50</h5>
                </div>
            </div>
            <!-- breathe -->
        </div>
        <div class="show-flex-container">
            <div class="resv-container">
                <h6 class="show-info-owner">Total price for 6 days</h6>
                <h6 class="show-info-owner-sm">(14/11/2020 - 10/11/2020)</h6>
                <h5 class="show-info-owner">$644 USD</h5>
            </div>
            <div class="edit-container">
                <div class="edit-buttons">
                    <i class="far fa-edit"></i>
                    <h6 class="show-info-owner">Edit these details</h6>
                </div>
                <div class="confirm-buttons">
                    <i class="fas fa-check-circle"></i>
                    <h6 class="show-info-owner">Proceed to payment</h6>
                </div>
            </div>
        </div>
        <!-- breathe -->
        <!-- breathe -->
    </div>
    <div id="map" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
</div>
