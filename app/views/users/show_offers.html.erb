<% @offers.each do |offer| %>
  <h1><%= offer %></h1>
  <div class="card-trip">
        <%=offer.listing.img_url.attached? ?  cl_image_tag(offer.listing.img_url[0].key, :width=>630, :height=>200,) : image_tag("download.png") %>
        <div class="card-trip-infos">
            <div>
                <h2>
                    <%= offer.listing.title %>
                </h2>
                <p>
                    <%= offer.listing.description %>
                </p>
                <%= link_to "show", listing_path(listing.id) %>
            </div>
            <h2 class="card-trip-pricing"></h2>
            <%=listing.user.img_url.attached? ?  cl_image_tag(listing.user.img_url.key, class: "card-trip-user avatar-bordered") : image_tag("blank-profile-picture-973460_1280.jpg", class: "card-trip-user avatar-bordered") %>
        </div>
    </div>
<% end %>
